@{
    ViewBag.Title = "Not Found";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Not Found</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
    <div class="d-flex align-items-center justify-content-center vh-100">
        <div class="text-center row">
            <div class=" col-md-6">
                <img src="~/Images/notfound.png" alt="not found" class="img-fluid">
            </div>
            <div class=" col-md-6 mt-5">
                <p class="fs-3" style="padding-top: 100px;"> <span class="text-danger">Opps!</span> Page not found.</p>
                <p class="lead">
                    The page you’re looking for doesn’t exist.
                </p>
                <a href="@Url.Action("Index","Home")" class="btn btn-primary">Go Home</a>
            </div>

        </div>
    </div>
</body>

</html>

